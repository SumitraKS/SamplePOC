<project name="SampleJunits" default='notify' basedir=".">

	<property name="report.dir" value="report" />
	<property name="output.dir" value="bin" />
	<property name="lib.dir" value="lib" />
	<property name="src.dir" value="src" />
	<property name="test.dir" value="${output.dir}/com/acc/selenium/test" />
	<property name="name" value="newapp" />


	<path id='compile.classpath'>
		<fileset dir="${lib.dir}">
			<include name='*.jar' />
		</fileset>
	</path>


	<target name='clean' description="Delete all build artifacts.">
		<delete dir="${output.dir}" />
		<delete dir="${report.dir}" />

		<delete dir="C:\Users\sumitra.subramanian\Desktop\Report" />
		<mkdir dir="${output.dir}" />
		<mkdir dir="${report.dir}" />
		<mkdir dir="C:\Users\sumitra.subramanian\Desktop\Report" />
	</target>



	<target name='compile' description='Compile source files and place beside source.'
		depends='clean'>
		<javac target="1.8" source="1.8" destdir="${output.dir}"
			includeantruntime="false" srcdir="${src.dir}">
			<classpath refid='compile.classpath' />
		</javac>
	</target>


	<target name='test' description='Run all JUnit tests.' depends='compile'>
		<junit printsummary="withOutAndErr">
			<classpath refid="compile.classpath" />
			<classpath>
				<pathelement path="${output.dir}" />
			</classpath>
			<formatter type="xml" />

			<test todir="report" name="FitNesseRunnerTests" />

		</junit>
	</target>



</project>
